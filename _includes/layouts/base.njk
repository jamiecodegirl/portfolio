<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,400;0,600;0,700;0,900;1,400&display=swap" rel="stylesheet">

    {%- set css -%}
      {% include "css/global.css" %}
      {% include "css/home.css" %}
      {% include "css/project.css" %}
    {%- endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>

  <body>
    <header>
      <div><img src="/img/logo.svg" height="65px" alt="logo"></div>

      <div class="project-navigation flex align-items{% if page.url == '/' %} display-none{% endif %}">
        <div class="flex align-items">
          <i class="fad fa-chevron-left" style="--fa-secondary-color: var(--green);--fa-secondary-opacity: 1.0;"></i>
          <a class="project-nav-item" href="{{ '/' | url }}">Take Me Home</a>
        </div>
        <div>
          <p> | </p>
        </div>
        <div class="flex align-items">
          <a class="project-url project-nav-item" href="{{ page.url | url }}">{{ title }}</a>
          <i class="fad fa-chevron-down" style="--fa-secondary-color: var(--green);--fa-secondary-opacity: 1.0;"></i>
        </div>
      </div>

      <div class="mobile-menu">
        <div id="mySidenav" class="sidenav">
          <a href="javascript:void(0)" class="closebtn" onclick="toggleNav()">
            <i class="fad fa-times" style="--fa-secondary-color: var(--green);--fa-secondary-opacity: 1.0;"></i>
          </a>
          <ul class="nav">
            {%- for entry in collections.all | eleventyNavigation %}
              <li class="nav-item {% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
            {%- endfor %}
          </ul>
          <div class="margin-left-20">
            {% set projectslist = collections.projects %}
            {% include "projectslist.njk" %}
          </div>
        </div>
      
        <div id="openbtn">
          <a href="javascript:void(0);" class="close-icon" onclick="toggleNav()">
            <i class="fad fa-bars" style="--fa-secondary-color: var(--green);--fa-secondary-opacity: 1.0;"></i>
          </a>
        </div>
      </div>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <div class="underline"></div>

    <footer>
      <div class="footer-icons">
        <a href="https://www.linkedin.com/in/jamierthompson/" target="_blank"><i class="fab fa-linkedin"></i></a>
        <a href="https://codepen.io/jamiecodegirl/" target="_blank"><i class="fab fa-codepen"></i></a>
        <a href="https://github.com/jamiecodegirl/" target="_blank"><i class="fab fa-github"></i></a>
      </div>
      <p><i class="fad fa-copyright" style="--fa-secondary-color: var(--green);"></i> 2020</p>
      <p><a href="mailto:hello@jamiethompson.design?subject=Message%20from%20jamiethompson.design">hello@jamiethompson.design</a></p>
      <p>This site was built with <a href="https://11ty.dev" target="_blank">11ty</a>. See my code on <a href="https://github.com/jamiecodegirl/portfolio" target="_blank">GitHub</a>.</p>
    </footer>

    <script src="{{ '/js/index.js' | url }}"></script>
    <script src="https://kit.fontawesome.com/73b07144a7.js" crossorigin="anonymous"></script>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>